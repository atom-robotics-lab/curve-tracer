<launch>

	<param command="$(find xacro)/xacro $(find curve_tracer)/urdf/mr_robot.xacro" name="robot_description"/>
  	<node args="-param robot_description -urdf -model mr_robot" name="spawn_urdf" pkg="gazebo_ros" type="spawn_model"/>

	<include file="$(find gazebo_ros)/launch/empty_world.launch">
    	<arg name="world_name" value="$(find curve_tracer)/worlds/sinx.world"/>
    	<arg name="paused" value="false"/>
    	<arg name="use_sim_time" value="true"/>
    	<arg name="gui" value="true"/>
    	<arg name="headless" value="false"/>
    	<arg name="debug" value="false"/>
	</include>

</launch>
